<Server port="<%= node['artifactory']['bind']['shutdown_port'] %>" shutdown="SHUTDOWN">

    <Service name="Catalina">
        <Connector
        	address="<%= node['artifactory']['bind']['ip'] %>"
        	port="<%= node['artifactory']['bind']['port'] %>"
        />

        <!-- This is the optional AJP connector -->
        <Connector port="<%= node['artifactory']['bind']['ajp_port'] %>" protocol="AJP/1.3"/>

        <Engine name="Catalina" defaultHost="localhost">
            <Host name="localhost" appBase="webapps"/>
        </Engine>

    </Service>
</Server>
